        android:id="@+id/webView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30px"
        android:layout_below="@+id/imageView1"
        android:visibility="invisible" >
    </WebView>

    <ProgressBar
