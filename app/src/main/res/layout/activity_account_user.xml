<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutAccountUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AccountUser" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/green_bar" >

        <TextView
            android:id="@+id/textViewCreateAccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="ACCOUNT"
            android:textColor="@color/white"
            android:textSize="32px" />

        <RelativeLayout
            android:id="@+id/relativeLayoutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80px"
                android:layout_height="80px"
                android:duplicateParentState="true"
                android:src="@drawable/back_btn_selector" />
        </RelativeLayout>

        <Button
            android:id="@+id/buttonNext"
            android:layout_width="150px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:text="EDIT"
            android:textColor="@drawable/text_color_selector"
            android:textSize="28px" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30px"
        android:tag="mwar" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="249px"
            android:layout_height="249px"
            android:background="@color/orange_button"
            android:tag="mwar" />

        <ImageView
            android:id="@+id/imagew2"
            android:layout_width="249px"
            android:layout_height="249px"
            android:background="@drawable/image_mask"
            android:tag="mwar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relImage"
        android:layout_marginTop="20px" >

        <EditText
            android:id="@+id/textViewUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20px"
            android:text="RVB"
            android:background="@color/white"
            android:textCursorDrawable="@drawable/cursor"
            android:textColor="@color/black"
            android:textSize="34px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20px"
        android:text="Account"
        android:textSize="38px" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="10px"
        android:background="@color/grey" >
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout1"
        android:layout_marginTop="10px"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="290px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:paddingLeft="90px"
                android:text="EMAIL"
                android:textSize="28px" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="30px"
                android:paddingBottom="30px"
                android:paddingLeft="90px"
                android:text="MOBILE"
                android:textSize="28px" />

            <!-- <TextView -->
            <!-- android:id="@+id/textView4" -->
            <!-- android:layout_width="wrap_content" -->
            <!-- android:layout_height="100px" -->
            <!-- android:padding="30px" -->
            <!-- android:text="PASSWORD" -->
            <!-- android:textSize="32px" /> -->
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/editText1"
                android:layout_width="match_parent"
                android:layout_height="100px"
                
                android:textColor="@color/black"
                android:textCursorDrawable="@drawable/cursor"
                android:textSize="32px" >
            </EditText>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="100px"
                android:inputType="phone"
                android:textCursorDrawable="@drawable/cursor"
                
                android:textColor="@color/black"    
                android:maxLength="14"           
                android:textSize="32px" />

            <!-- <EditText -->
            <!-- android:id="@+id/editText3" -->
            <!-- android:layout_width="match_parent" -->
            <!-- android:layout_height="100px" -->
            <!-- android:inputType="textPassword" -->
            <!-- android:padding="20px" -->
            <!-- android:hint="******" -->
            <!-- android:textColor="@color/black" -->
            <!-- android:textColorHint="@color/black" -->
            <!-- android:textCursorDrawable="@drawable/cursor" -->
            <!-- android:textSize="36px" /> -->
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_below="@+id/LinearLayout1"
        android:layout_marginTop="10px"
        android:background="@color/grey" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="35px"
            android:layout_height="31px"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/tick_android" />

        <TextView
            android:id="@+id/SUCCESStxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView3"
            android:layout_marginTop="30px"
            android:text="SUCCESS"
            android:textSize="34px"
            android:textColor="@color/black_pure" />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayout4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px" >
        
        <!-- <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_above="@+id/ChangePassword"
            android:layout_centerHorizontal="true" /> -->
        
        <ImageView
                android:id="@+id/imageViewLoader"
                android:layout_width="54px"
                android:layout_height="54px"
                 android:visibility="invisible"
            android:layout_above="@+id/ChangePassword"
            android:layout_centerHorizontal="true" 
                android:src="@drawable/gif_loader" />
        
    </RelativeLayout>

    <Button
        android:id="@+id/button1"
        android:layout_width="500px"
        android:layout_height="100px"
        android:layout_below="@+id/relativeLayout3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40px"
        android:textSize="32px"
        android:textColor="@drawable/text_color_selector"
        android:background="@color/orange_button"
        android:text="CHANGE PASSWORD" />

</RelativeLayout>