<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="140px"
    android:background="@color/white"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/foodItemImg"
        android:layout_width="114px"
        android:layout_height="114px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:tag="mwar"
        android:layout_marginLeft="20px"
        android:background="@drawable/ic_food_img_circle" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@+id/foodItemImg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/MealCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="#4890e8"
            android:textSize="34px" />

        <TextView
            android:id="@+id/ToopingCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:text="TextView"
            android:maxLines="2"
            android:textColor="#8e8e8e"
            android:textSize="34px" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="680px"
        android:layout_height="3px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#E7E9E8"
        android:text="" />

</RelativeLayout>