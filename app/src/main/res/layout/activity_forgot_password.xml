<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="720px"
    android:layout_height="1134px"
    android:background="@drawable/ic_splash_bg"
    tools:context=".LoginScreenDriver" >

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="720px"
        android:layout_height="96px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/green_bar" >

        <RelativeLayout
            android:id="@+id/backBtnLayout"
            android:layout_width="100px"
            android:layout_height="100px" >

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="80px"
                android:layout_height="80px"
                android:layout_centerInParent="true"
                android:src="@drawable/btn_back_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/quick_meals_logo" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200px"
        android:background="#40ffffff"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/faded_line_1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="32px"
                android:layout_height="24px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:src="@drawable/ic_email" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="40px"
                android:background="#0000"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:paddingRight="40px"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textCursorDrawable="@drawable/cursor_white"
                android:textSize="44px" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/faded_line_1" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/requestLayout"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@+id/linearLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px" >

        <TextView
            android:id="@+id/requestTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="REQUEST PASSWORD RESET"
            android:textColor="@drawable/text_color_selector"
            android:textSize="36px" />
    </RelativeLayout>

    <TextView
        android:id="@+id/TXT"
        android:layout_width="600px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/requestLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120px"
        android:gravity="center"
        android:text="Please provide your registered email id. We will send you instructions to reset your password."
        android:textColor="@color/white"
        android:textSize="36px" />

</RelativeLayout>