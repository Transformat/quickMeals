<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:layout_width="match_parent"
        android:layout_height="1134px"
        layout="@layout/activity_main_menu_driver" />

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="#4890e8" >

        <RelativeLayout
            android:id="@+id/menuBtnLayout"
            android:layout_width="100px"
            android:layout_height="100px" >

            <ImageView
                android:id="@+id/menuImg"
                android:layout_width="87px"
                android:layout_height="87px"
                android:layout_centerInParent="true"
                android:background="@drawable/btn_menu_selector" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="239px"
            android:layout_height="27px"
            android:layout_centerInParent="true"
            android:background="@drawable/bitekite" />
    </RelativeLayout>
    
    

    <RelativeLayout
        android:id="@+id/mainlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_bg" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="10px"
            android:background="@drawable/shadow_down" />

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/imageView2"
            android:overScrollMode="never" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:padding="20px"
                    android:text="Here at Bite Kite speed is our \nspecialty. \nWe strive to provide you with \nwholesome, flavorful meals without \nkeeping you waiting. \n\nOur daily-changing menu features \nthree healthy, natural, and locally \nsourcedmeals conccted by our in- \nhouse chefs. \n\nLeave behind the hassle of \nbrowsing, order your nosh in \nseconds, and get back to business. \nWithin 15-20 minutesyour order will \nbe delivered right to your doorstep. \nThe $2 delivery fee includes tax \n and tip. \n\nOpen for lunch Monday to Friday \nfrom 11am-3pm."
                    android:textColor="@color/black"
                    android:textSize="34px" />

                <TextView
                    android:id="@+id/number"
                    android:layout_width="match_parent"
                    android:layout_height="100px"
                    android:gravity="center"
                    android:padding="20px"
                    android:text="09876543210"
                    android:textColor="@color/black"
                    android:textSize="30px" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/relativeLayoutCover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header"
        android:background="@color/white"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/progressBar1"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

</RelativeLayout>