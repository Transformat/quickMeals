<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootMenuLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MenuScreen" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:visibility="invisible"
        android:orientation="vertical" >
        
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="396px"
            android:layout_height="44px"
            android:layout_gravity="center"
            android:background="@drawable/quick_meals_logo" />

        <TextView
            android:id="@+id/DailyMenuTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:layout_marginTop="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="DAILY MENU"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/PaymentTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="PAYMENT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/AccountTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="ACCOUNT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/SupportTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="SUPPORT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/AboutTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="ABOUT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />
        
        <TextView
            android:id="@+id/PromotionTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="PROMOTIONS"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />
        
        <TextView
            android:id="@+id/ShareTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="SHARE"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />

        <TextView
            android:id="@+id/LogoutTxt"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:background="@drawable/menu_layout_color_selector_custmor"
            android:gravity="center"
            android:text="LOGOUT"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/black"
            android:textSize="34px" />
        
         
    </LinearLayout>

</RelativeLayout>